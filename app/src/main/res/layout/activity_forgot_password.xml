<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_img_app"
    tools:context=".forgotPassword">


    <TextView
        android:id="@+id/banner2"
        android:layout_width="269dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:fontFamily="casual"
        android:text=" FOOD for FOODies"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textSize="30sp"
        android:textStyle="bold"

        app:flow_horizontalAlign="center"

        app:layout_constraintBottom_toTopOf="@+id/ForgotPasswordContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.166" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:layout_marginTop="52dp"
        app:flow_horizontalAlign="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" /><![CDATA[



    TextView
    android:id="@+id/banner"
    android:layout_width="302dp"
    android:layout_height="44dp"
    android:layout_marginStart="55dp"
    android:layout_marginLeft="55dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="54dp"
    android:layout_marginRight="54dp"
    android:text=" FOOD for FOODies"
    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />





    ]]>

    <View
        android:id="@+id/ForgotPasswordContainer"
        style="@style/ForgotPasswordContainerContainer"
        android:layout_width="379dp"
        android:layout_height="253dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.539" />

    <EditText
        android:id="@+id/email"
        android:layout_width="253dp"
        android:layout_height="45dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordContainer"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordContainer"
        app:layout_constraintTop_toTopOf="@+id/ForgotPasswordContainer" />

    <Button
        android:id="@+id/resetPassword"
        android:layout_width="255dp"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/deep_saffron"
        android:text="Reset Password"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordContainer"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordContainer"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginLeft="182dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="181dp"
        android:layout_marginRight="181dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetPassword" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="120dp"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/deep_saffron"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/ForgotPasswordContainer"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/ForgotPasswordContainer"
        app:layout_constraintTop_toBottomOf="@+id/resetPassword" />
</androidx.constraintlayout.widget.ConstraintLayout>